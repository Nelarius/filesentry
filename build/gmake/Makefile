# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  demo_config = debug
  filesentry_config = debug
endif
ifeq ($(config),release)
  demo_config = release
  filesentry_config = release
endif

PROJECTS := demo filesentry

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

demo:
ifneq (,$(demo_config))
	@echo "==== Building demo ($(demo_config)) ===="
	@${MAKE} --no-print-directory -C . -f demo.make config=$(demo_config)
endif

filesentry:
ifneq (,$(filesentry_config))
	@echo "==== Building filesentry ($(filesentry_config)) ===="
	@${MAKE} --no-print-directory -C . -f filesentry.make config=$(filesentry_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f demo.make clean
	@${MAKE} --no-print-directory -C . -f filesentry.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   demo"
	@echo "   filesentry"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"